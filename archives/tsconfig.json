{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@type/*": ["types/*"],
      "@commands/*": ["commands/*"],
      "@events/*": ["events/*"],
      "@services/*": ["services/*"],
      "@repositories/*": ["repositories/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
