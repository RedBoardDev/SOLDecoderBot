# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id
GUILD_ID=your_discord_server_id

# Bot Configuration
WALLET_ADDRESS=solana_wallet_to_monitor
AUTHORIZED_ROLE_ID=discord_role_id_for_access
RPC_ENDPOINT=https://api.mainnet-beta.solana.com
MIN_SOL_AMOUNT=0.001

# Environment
NODE_ENV=development
LOG_LEVEL=info

# AWS Configuration for DynamoDB
AWS_KEY=your_aws_access_key_id
AWS_SECRET=your_aws_secret_access_key
REGION=eu-west-3

# DynamoDB Table Names (optional - defaults to solanashares- prefix)
USER_INVESTMENTS_TABLE=solanashares-UserInvestments
TRANSACTION_CHECKPOINTS_TABLE=solanashares-TransactionCheckpoints

# Role Management Configuration
FARMER_ROLE_ID=your_farmer_role_id_here  # Discord role ID for farmers (users with >= min SOL amount)
FARMER_MIN_SOL_AMOUNT=0.99              # Minimum SOL amount required to get farmer role

# Auto-refresh Configuration (optional - defaults shown)
AUTO_REFRESH_INTERVAL=900000          # 15 minutes in milliseconds (minimum 1000ms)
AUTO_REFRESH_STARTUP_DELAY=30000      # 30 seconds in milliseconds (0 = no delay)

# Uptime Kuma Push Monitor (optional)
# UPTIME_KUMA_PUSH_URL=https://your-uptime-kuma.example.com/api/push/xxxxx  # Push URL from Uptime Kuma
# UPTIME_KUMA_PING_INTERVAL=60000      # Ping interval in milliseconds (minimum 10000ms = 10s)
