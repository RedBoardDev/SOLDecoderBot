{
  "name": "solanashares-logistic",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx src/index.ts",
    "deploy-commands": "tsx scripts/deploy-commands.ts",
    "deploy-commands:force": "tsx scripts/deploy-commands.ts --force",
    "migrate-data": "tsx scripts/migrate-to-dynamodb.ts",
    "format:check": "biome format . --diagnostic-level=error",
    "format:fix": "biome format --write ./src/**/*.tsx",
    "lint:check": "biome lint . --diagnostic-level=error",
    "lint:fix": "biome lint --write .",
    "check:all": "biome check . --diagnostic-level=error",
    "typescript:check": "tsc --noEmit",
    "pm2:start": "pm2 start ecosystem.config.mjs --env production",
    "pm2:stop": "pm2 stop solanashares-bot",
    "pm2:restart": "pm2 restart solanashares-bot",
    "pm2:reload": "pm2 reload ecosystem.config.mjs --env production",
    "pm2:delete": "pm2 delete solanashares-bot",
    "pm2:logs": "pm2 logs solanashares-bot",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.738.0",
    "@aws-sdk/lib-dynamodb": "^3.738.0",
    "@discordjs/rest": "^1.2.0",
    "@solana/web3.js": "^1.98.2",
    "axios": "^1.8.4",
    "chalk": "^5.4.1",
    "discord.js": "^14.17.0",
    "dotenv": "^16.4.7",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.7.1",
    "tsx": "^4.19.2",
    "typescript": "^5.2.2"
  }
}
